{% extends 'editlayout.html.twig' %}

{% block title %}Welcome{% endblock %}
{% block content %}
<form method="post" action="{{ path('home.edit') }}">
    <div class="error">
    {{ form_errors(form) }}
    </div>
    
    {{ form_widget(form.content, { 'attr': {'class': 'tiny', 'style': 'height: 400px'} }) }} 
    {{ form_widget(form._token) }} 
    <button type="submit">Save</button>
</form>
{% endblock %}